---
import { Image } from "astro:assets";
const { id, title, imageSrc } = Astro.props;
---

<a href={`/keycap/${id}`}>
  <li class="card">
    <Image src={imageSrc} alt="" class="image-link" height="400" width="400" />
    <h3 class="card-title">
      {title}
    </h3>
  </li>
</a>
<style>
  .card {
    cursor: pointer;
    display: flex;
    flex-direction: column;
  }
  .card:hover .card-title {
    color: blue;
  }
  h3 {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .image-link {
    object-fit: cover;
    border-radius: 0.5rem;
    height: 100%;
    width: 100%;
    aspect-ratio: 1 / 1;
  }
</style>
