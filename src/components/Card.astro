---
const { id, manufacturer, title, imageSrc, accentColor, designer } =
  Astro.props;
---

<a href={`/keycap/${id}`}>
  <li class="card">
    <div class="card-image-container">
      <img
        src={imageSrc}
        alt=""
        class="card-image"
        transition:name={`record-${id}`}
      />
    </div>

    <div class="card-info-container">
      <p class="card-designer text-xs">
        {designer.toUpperCase()}
      </p>
      <h3 class="card-title text-large">
        {manufacturer + " " + title}
      </h3>
    </div>
  </li>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    cursor: pointer;
    position: relative;
    background-color: rgb(248, 248, 248);
    border-radius: 0.5rem;
  }
  .card-background {
    position: absolute;
    height: 30%;
    width: 100%;
    z-index: 0;
    border-radius: 0.5rem 0.5rem 0rem 0rem;
  }

  .card:hover .card-title {
    color: blue;
  }

  .card-inner-container {
    padding: 1rem;
    z-index: 1;
  }

  .card-image-container {
    width: 100%;
    height: 150px;
  }

  .card-image {
    border-radius: 0.5rem 0.5rem 0rem 0rem;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-info-container {
    padding: 0.5rem 1rem 0.5rem 1rem;
  }
  .card-title {
    font-size: 1rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .card-designer {
    color: grey;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }

  @media (min-width: 640px) {
    .card-title {
      font-size: 1.2rem;
    }
  }
</style>
