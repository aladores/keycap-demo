// import ThemeButton from "./ThemeButton.astro";
---

<header>
  <div class="header-container padding-bottom-1">
    <div class="header-left">
      <div class="header-link">
        <a href="/" class="text-2xl text-bold header-link">Keycap Demo</a>
      </div>
      <div class="header-link">
        <a href="/all" class="text-base header-link">GMK</a>
      </div>
    </div>
    <div class="header-right">
      <!-- <ThemeButton /> -->
    </div>
  </div>
  <div class="grey-line"></div>
</header>

<style>
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .header-left {
    display: flex;
    gap: 1rem;
  }

  .header-link {
    color: var(--primary-text);
  }
  .header-link:hover {
    color: var(--hover-link-text);
  }

  .grey-line {
    position: absolute;
    left: 0;
    width: 100%;
    border-bottom: 1px var(--grey-line) solid;
  }
</style>
