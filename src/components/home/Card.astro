---
const { id, manufacturer, title, kit, designer } = Astro.props;
---

<li class='card' role='listitem'>
  <a href={`/keycap/${id}`} role='link'>
    <div class='card-image-container'>
      <img
        src={kit.imageSrc}
        alt={`${kit.name} kit for ${manufacturer} ${title}`}
        class='card-image skeleton'
        transition:name={`record-${id}`}
      />
    </div>
    <div class='card-info-container'>
      <p class='card-designer text-xs'>
        {designer.toUpperCase()}
      </p>
      <h3 class='card-title text-large'>
        {manufacturer + ' ' + title}
      </h3>
    </div>
  </a>
</li>

<style>
  .card {
    display: flex;
    flex-direction: column;
    cursor: pointer;
    position: relative;
    background-color: var(--card-background);
    border-radius: 0.5rem;
  }
  .card-background {
    position: absolute;
    height: 30%;
    width: 100%;
    z-index: 0;
    border-radius: 0.5rem 0.5rem 0rem 0rem;
  }

  .card:hover .card-title {
    color: var(--hover-link-text);
  }

  .card-inner-container {
    padding: 1rem;
    z-index: 1;
  }

  .card-image-container {
    width: 100%;
    height: 150px;
  }

  .card-image {
    border-radius: 0.5rem 0.5rem 0rem 0rem;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-info-container {
    padding: 0.5rem 1rem 0.5rem 1rem;
  }
  .card-title {
    font-size: 1rem;
    color: var(--primary-text);
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .card-designer {
    color: var(--tertiary-text);
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }

  @media (min-width: 640px) {
    .card-title {
      font-size: 1.2rem;
    }
  }
</style>
