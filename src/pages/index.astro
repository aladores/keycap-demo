---
import gmkNoire from "../assets/gmk_noire.jpeg";
import gmkCafe from "../assets/gmk_cafe.webp";
import gmkMasterpiece from "../assets/gmk_masterpiece.webp";
import gmkMetropolis from "../assets/gmk_metropolis.png";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

import Card from "../components/Card.astro";
import { data } from "../../public/data";
---

<Layout title="Welcome to Astro.">
  <main>
    <Header />
    <h2 class="header-main-subtitle">Featured</h2>
    <ul role="list" class="card-grid">
      {
        data.map((item) => {
          return (
            <Card
              href={item.id}
              title={item.attributes.title}
              imageSrc={item.attributes.imageSrc}
            />
          );
        })
      }
    </ul>
  </main>
</Layout>

<style>
  .header-main-subtitle {
    font-size: 2rem;
    padding-bottom: 1rem;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: 1024px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }

  .card-grid {
    display: grid;
    align-items: center;
    justify-content: center;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  @media (min-width: 640px) {
    .card-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 768px) {
    .card-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
